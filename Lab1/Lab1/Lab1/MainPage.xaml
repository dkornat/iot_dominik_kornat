<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab1.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="imgPhoto" />
        <StackLayout Grid.Row="1">
            <Button x:Name="btnCamera" Text="Take a photo" />
            <Entry x:Name="entFirstName" Placeholder="Enter your first name" />
            <Entry x:Name="entLastName" Placeholder="Enter your last name" />
            <Entry x:Name="entPhoneNumber" Placeholder="Enter your phone number" Keyboard="Telephone" />
        </StackLayout>

        <StackLayout Grid.Row="2" VerticalOptions="EndAndExpand">
            <Button x:Name="btnSave" Text="Save data" />
        </StackLayout>
    </Grid>

</ContentPage>
